{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-7-x86_64",
      "vm_name": "centos-7-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "e3afe3f1121d69c40cc23f0bafa05e5d",
      "iso_checksum_type": "md5",
      "iso_url": "http://admin.mgmt.melbourne.rc.nectar.org.au/packer-iso/CentOS-7.0-1406-x86_64-Minimal.iso",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [ [ "-m", "1024" ] ],
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-x86_64-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/centos/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "file",
      "source": "files/centos/jail.conf",
      "destination": "/etc/fail2ban/jail.conf"
    },
    {
      "type": "file",
      "source": "files/centos/hostsdeny.conf",
      "destination": "/etc/fail2ban/action.d/hostsdeny.conf"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/epel.sh",
        "scripts/openstack-redhat.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
