{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m1.small",
      "image_name": "jenkins-slave-ubuntu-16.04-x86_64_build",
      "source_image": "a42dbd5c-1650-4833-a14d-70ba86bf65c5",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook-jenkins-slave.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
