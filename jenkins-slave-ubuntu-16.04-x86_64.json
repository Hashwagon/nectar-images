{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m1.small",
      "image_name": "jenkins-slave-ubuntu-16.04-x86_64_build",
      "source_image": "c6b9dcd5-530e-4009-8b94-adba44a88daa",
      "security_groups": [ "jenkins-slave" ],
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -q -y update",
        "sudo apt-get -q -y install python-apt"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook-jenkins-slave.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
