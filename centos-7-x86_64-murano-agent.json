{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m2.xsmall",
      "image_name": "centos-7-x86_64_build",
      "source_image": "8096476f-14c3-46b6-9525-5b1947b73631",
      "ssh_pty": true,
      "ssh_username": "centos"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum -q -y install python libselinux-python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook-murano-agent.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
