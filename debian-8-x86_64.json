{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m2.xsmall",
      "image_name": "debian-8-x86_64_build",
      "source_image": "cdc32061-26f2-4aa5-a3c8-2bb72b058725",
      "ssh_username": "debian"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -q -y update",
        "sudo apt-get -q -y install python-apt"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
