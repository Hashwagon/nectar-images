{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m1.small",
      "image_name": "jenkins-slave-ubuntu-14.04-x86_64_build",
      "source_image": "5129e3ce-4a68-4a52-bc82-05fc85b5711f",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook-jenkins-slave.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
