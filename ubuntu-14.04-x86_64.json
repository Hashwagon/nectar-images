{
  "builders": [
    {
      "type": "qemu",
      "name": "ubuntu-14.04-x86_64",
      "vm_name": "ubuntu-14.04-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://admin.mgmt.melbourne.rc.nectar.org.au/packer-iso/ubuntu-14.04-x86_64-mini.iso",
      "iso_checksum": "7297321c2fa6424417a548c85edd6e98",
      "iso_checksum_type": "md5",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [ [ "-m", "1024" ] ],
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait> ",
        "linux vga=788 ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.04-x86_64-preseed.cfg ",
        "debian-installer=en_AU auto locale=en_AU kbd-chooser/method=us ",
        "hostname=ubuntu-1404 ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=initrd.gz -- <enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/ubuntu/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-debian.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
